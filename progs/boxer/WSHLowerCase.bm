// WSHLowerCase: Change All Upper Case To Lower Case

macro WSHLowerCase(void)
{
	int i;
	string str;
	
	for (i = 1; i <= LineCount; i++)
	{
		GotoLine(i);
		StartofLine;
		GetLineText(i, str);
		strlwr(str);
		PutLineText(i, str);
	}
	
	Gotoline(1);
	Save;
}









































































































































































































































































































